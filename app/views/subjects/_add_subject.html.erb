<div class = "left-box-sub">
    <%= form_with(model: @subject, local: true) do |f| %>
        <div class="form-group">
            <%= render "shared/error_messages", object: @subject %>
            <label><%= t('subjects.index.create_sub') %></label>
            <div class="col-sm-10">
                <%= f.text_field :name, class: "form-control", placeholder: t('subjects.index.name_sub') %>
            </div>
        </div>
            <div class="col-sm-10">
            <%= f.submit t('subjects.index.button_create_sub'), class: "btn btn-primary" %>
        </div>
    <% end %>
</div>
