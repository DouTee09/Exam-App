<div class = "sub-container">
    <div class = "left-box-sub">
        <%= form_with(model: @subject, local: true) do |f| %>
            <div class="form-group">
                <%= render "shared/error_messages", object: @subject %>
                <label>Thêm môn học mới</label>
                <div class="col-sm-10">
                    <%= f.text_field :name, class: "form-control", placeholder: "Tên môn học" %>
                </div>
            </div>
             <div class="col-sm-10">
                <%= f.submit "Create subject", class: "btn btn-primary" %>
            </div>
        <% end %>
    </div>

    <div class = "right-box-sub">
        <div class = "number-sub">
            <h4>Number subject: <%= @subjects.count %></h4>
        </div>

        <div class = "body-subject">
            <ul>
                <% @subjects.each do |sub| %>
                    <li class = "name-sub">
                        <%= link_to subject_exams_path(sub) do %>
                            <%= image_tag(gravatar_for(current_user.email), alt: current_user.name, class: "gravatar") %>
                            <%= sub.name %>
                        <% end %>
                    </li>
                <% end %>
                <div class="d-flex justify-content-center">
                    <%= paginate @subjects, window: 2, theme: 'bootstrap-5',
                                pagination_class: "pagination-sm flex-wrap justify-content-center",
                                nav_class: "d-inline-block" %>
                </div>
            </ul>
        </div>
    </div>
</div>
