<% if can? :read, @answers %>
    <% provide(:title, "History") %>
    <div class = "exam-container">
        <div class = "box-info-user">
            <h5>Lịch sử bài thi</h5>
        </div>
        <div class = "box-info-exam">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">STT</th>
                        <th scope="col">Tên bài thi</th>
                        <th scope="col">Môn thi</th>
                        <th scope="col">Điểm</th>
                        <th scope="col">Xem chi tiết</th>
                    </tr>
                </thead>
                <tbody>
                    <% @answers.each_with_index do |answer, index| %>
                        <tr>
                            <th scope="row"> <%= index+1 %> </th>
                            <td><%= answer.exam.name %></td>
                            <td><%= answer.exam.subject.name %></td>
                            <td><%= answer.score %></td>
                            <td>
                                <%= link_to "Xem", subject_exam_answer_path(answer.exam.subject.id, answer.exam.id, answer.id ), class: "btn btn-info"%>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
<% end %>
